<!DOCTYPE html>
<html>
  <head>
    <title>Authorization</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.name %>
    <% end %>
    <%= yield %>
  </body>
</html>
